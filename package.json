{
  "name": "@thebudimir/monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n main,api -c cyan,magenta \"bun run dev:main\" \"bun run dev:api\"",
    "dev:main": "bun run --filter @thebudimir/main dev",
    "dev:api": "bun run --filter @thebudimir/api dev",
    "build": "bun run --filter '*' build",
    "build:main": "bun run --filter @thebudimir/main build",
    "build:api": "bun run --filter @thebudimir/api build",
    "type-check": "bun run --filter '*' type-check",
    "test": "bun run --filter '*' test",
    "test:main": "bun run --filter @thebudimir/main test",
    "test:api": "bun run --filter @thebudimir/api test",
    "lint": "biome lint packages/",
    "format": "biome format --write packages/",
    "check": "biome check --write packages/",
    "container:dev": "podman-compose up main api",
    "container:dev:main": "podman-compose up main",
    "container:dev:api": "podman-compose up api",
    "container:prod": "podman-compose --profile production up main-prod api-prod",
    "container:build": "podman build -t thebudimir-main:latest --target production .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3"
  },
  "license": "MIT",
  "dependencies": {
    "sharp": "^0.34.5"
  }
}
