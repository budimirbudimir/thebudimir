# Ollama Performance Configuration
# For AMD Ryzen AI 7 350 (8 cores/16 threads) + Radeon 860M

# Vision Model Configuration
OLLAMA_VISION_MODEL=llava-phi3

# GPU Configuration (AMD ROCm)
# Enable GPU acceleration for AMD Radeon 860M
OLLAMA_GPU_OVERHEAD=0
HSA_OVERRIDE_GFX_VERSION=11.0.0
OLLAMA_NUM_GPU=999  # Use all available GPU layers

# CPU Configuration
# Use 8 threads (50% of 16 threads available)
OLLAMA_NUM_THREAD=8

# Memory Management
# Keep only 1 model loaded at a time to save memory
OLLAMA_MAX_LOADED_MODELS=1
# Keep model loaded for 10 minutes after last use
OLLAMA_KEEP_ALIVE=10m

# Context and Performance
# Optimize context window for vision tasks
OLLAMA_NUM_CTX=4096
# Enable faster processing
OLLAMA_NUM_BATCH=512
OLLAMA_NUM_PARALLEL=2

# Connection Settings
OLLAMA_HOST=127.0.0.1:11434
